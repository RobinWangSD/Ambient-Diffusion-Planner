        },
        {
            "name": "train_diffusion",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/Ambient-Diffusion-Planner/ambient-diffusion/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--name", "debug-map-encoder",
                "--root", "/avl-west/nuplan",
                "--train_metadata", "/avl-west/nuplan/file_index_pred.json",
                "--val_metadata", "/avl-west/nuplan/file_index_pred.json",
                "--train_batch_size", "1",
                "--val_batch_size", "1",
                "--num_workers", "0",
                "--logger", "wandb",
                "--accelerator", "gpu",
                "--devices", "1",
                "--train_epochs", "1",
                "--hidden_dim", "128",
                "--num_heads", "8",
                "--num_hops", "4",
                "--dropout", "0.1",
                "--diffuser_segment_length", "20", 
                "--diffuser_segment_overlap", "10", 
                // "--diffuser_normalize_segments", 
                "--max_agents", "32"
            ]
        },
        {
            "name": "train_ar",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/Ambient-Diffusion-Planner/Plan-R1/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--config", "/root/Ambient-Diffusion-Planner/Plan-R1/config/train/pred_debug.yaml",
            ]
        },
        {
            "name": "Debug train_pl.py (single GPU)",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/Ambient-Diffusion-Planner/Diffusion-Plannerv2/train_pl.py",
            "console": "integratedTerminal",
            "env": {
                "DP_PLOT_VALID_STATES": "debug_plots"
            },
            "args": [
                "--name", "debug-train",
                "--logger", "wandb",
                "--train_set", "/avl-west/nuplan/nuplan-v1.1/processed",
                "--train_metadata", "/avl-west/nuplan/file_index_pred.json",
                "--normalization_file_path", "/root/Ambient-Diffusion-Planner/Diffusion-Plannerv2/normalization.json",
                "--agent_num", "15",
                "--predicted_neighbor_num", "15",
                "--batch_size", "2",
                "--max_files", "1000000",
                "--num_workers", "1",
                "--devices", "1",
                "--accelerator", "gpu",
                "--strategy", "ddp_find_unused_parameters_true",
                "--use_ema", "true",
                "--save_dir", "/root",
            ],
            "justMyCode": false
        }
